{
	"defaultSeverity": "warning",
	"extends": [
		"tslint:recommended"
	],
	"linterOptions": {
		"exclude": [
			"*.json",
			"**/*.json"
		]
	},
	"rules": {
		"interface-name": false,
		"ordered-imports": false,
		"object-literal-sort-keys": false,
		"no-consecutive-blank-lines": false,
		"trailing-comma": false,
		"semicolon": false,
		"arrow-parens": false,
		"quotemark": [
			true,
			"single"
		],
		"indent": [
			true,
			"tabs",
			4
		],
		"no-console": false,
		"no-magic-numbers": {
			"options": [
				-1,
				0,
				1
			]
		},
		"max-file-line-count": {
			"options": 500
		}
	}
} 